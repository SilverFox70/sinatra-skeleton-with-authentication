<div class="edit_profile">
  <form class="profile_form" method="PUT" action="/users/profile/update/<%= @logged_in_as.slug %>">
    <fieldset>
      <legend>Edit Profile</legend>
        <input id="first_name" type="text" name="first_name" value="<%= @logged_in_as.try(:first_name) %>" placeholder="First Name">
        <br/>
        <input id="last_name" type="text" name="last_name" value="<%= @logged_in_as.try(:last_name) %>" placeholder="Last Name">
        <br/>
        <input id="email" type="text" name="email" value="<%= @logged_in_as.try(:email) %>" placeholder="email">
        <br/>
        <input id="age" type="text" name="age" value="<%= @logged_in_as.try(:age) %>" placeholder="age">
        <br/>
        <input id="gender" type="text" name="gender" value="<%= @logged_in_as.try(:gender) %>" placeholder="gender">
        <br/>
        <input id="bio" type="text" name="bio" value="<%= @logged_in_as.try(:bio) %>" placeholder="bio">
        <br/>
        <input id="edit_button" type="submit" name="submit" value="Done">
    </fieldset>
  </form>
</div>
